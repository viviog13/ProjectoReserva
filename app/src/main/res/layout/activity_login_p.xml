<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ac3333"
    tools:context=".LoginP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/footballplayer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Login"
            android:textColor="#d4d4d4"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtusuariou"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Usuario"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edtcontraseñau"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btningresaru"
                android:layout_width="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_height="37dp"
                android:layout_gravity="left"
                android:background="#37ca35"
                android:text="Ingresar"/>

            <Button
                android:id="@+id/btnregistraru"
                android:layout_width="130dp"
                android:layout_marginTop="15dp"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:background="#bc0915"
                android:text="Registrar"
                android:textColor="#FFFF"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>