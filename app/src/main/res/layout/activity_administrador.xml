<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ad029743"
    tools:context=".AdministradorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:shadowColor="#FFFF"
            android:text="Registrate Administrador"
            android:textColor="#FFFF"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edtnombread"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:fontFamily="casual"
            android:singleLine="true"
            android:hint="Nombres"
            android:imeOptions="actionNext"
            />

        <EditText
            android:id="@+id/edtapellidosad"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Apellidos"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"/>

        <EditText
            android:id="@+id/edtcontraseñaad"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Contraseña"
            android:fontFamily="casual"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/edtcompdeportivoad"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Complejo Deportivo"
            android:imeOptions="actionDone"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/edtnumcanchas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Número de Canchas"
            android:fontFamily="casual"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/edtdireccionad"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:hint="Direccción"
            android:imeOptions="actionDone"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btningresarad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="#700101"
            android:text="Ingresar"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>