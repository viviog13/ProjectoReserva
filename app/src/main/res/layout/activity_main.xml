<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#da2324">


     <TextView
         android:id="@+id/textView2"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_above="@+id/btnplayer"
         android:layout_alignParentStart="true"
         android:layout_x="0dp"
         android:layout_y="424dp"
         android:background="#9e0f22"
         android:gravity="center"
         android:text="Ingresar como:"
         android:textColor="#FFFFFF"
         android:textSize="20dp"
         tools:layout_editor_absoluteX="0dp"
         tools:layout_editor_absoluteY="430dp" />

     <Button
         android:id="@+id/btnplayer"
         android:layout_width="192dp"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_x="0dp"
         android:layout_y="463dp"
         android:background="#007822"
         android:drawableLeft="@drawable/shoe"
         android:paddingLeft="20dp"
         android:text="Pelotero"
         android:textColor="#FFFF" />

     <Button
         android:id="@+id/btnadmin"
         android:layout_width="192dp"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentEnd="true"
         android:layout_x="192dp"
         android:layout_y="463dp"
         android:background="#007822"
         android:drawableLeft="@drawable/footballfield"
         android:paddingLeft="20dp"
         android:text="Administrador"
         android:textColor="#FFFF" />

     <ImageView
         android:id="@+id/imageView4"
         android:layout_width="120dp"
         android:layout_height="152dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="108dp"
         app:srcCompat="@drawable/logo" />

     <ImageView
         android:id="@+id/imageView5"
         android:layout_width="wrap_content"
         android:layout_height="48dp"
         android:layout_below="@+id/imageView4"
         android:layout_centerHorizontal="true"
         app:srcCompat="@drawable/logoname" />
</RelativeLayout>