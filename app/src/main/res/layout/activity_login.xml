<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginA"
    android:background="#d1107635">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Administrador"
            android:textColor="#d4d4d4"
            android:textSize="50dp"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtusuarioa"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:hint="Usuario"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/edtcontraseñaa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btningresara"
                android:layout_width="130dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:layout_height="37dp"
                android:layout_gravity="left"
                android:background="#70a645"
                android:textColor="#FFFF"
                android:text="Ingresar"/>

            <Button
                android:id="@+id/btnregistrara"
                android:layout_width="130dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:background="#486eea"
                android:text="Registrar"
                android:textColor="#FFFF"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>